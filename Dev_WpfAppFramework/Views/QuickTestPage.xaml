<Page x:Class="Dev_WpfAppFramework.Views.QuickTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dev_WpfAppFramework.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:vm="clr-namespace:Dev_WpfAppFramework.ViewModels"
      Title="QuickTestPage">
    <Page.DataContext>
        <vm:QuickTestViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="ClickTestOne"></Button>
            <TextBlock Text="{Binding TestStr1}"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
